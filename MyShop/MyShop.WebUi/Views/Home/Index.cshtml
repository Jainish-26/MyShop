@model MyShop.Core.ViewModels.ProductListViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

<div class="row">
    <!-- Filter Sidebar -->
    <div class="col-md-3 col-lg-2">
        <h4>Filter By Category</h4>
        <div class="card mb-4">
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <!-- All Products Link -->
                    <li class="list-group-item @(Request["Category"] == null ? "active" : "No Data")">
                        @Html.ActionLink("All", "Index", null, new { @class = "text-decoration-none" })
                    </li>

                    <!-- Category Filters -->
                    @foreach (var cat in Model.ProductCategories)
                    {
                        <li class="list-group-item @(Request["Category"] == cat.Category ? "active" : "No Data")">
                            @Html.ActionLink(cat.Category, "Index", new { Category = cat.Category }, new { @class = "text-decoration-none" })
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Clear Filter Button -->
        <div class="text-center">
            @Html.ActionLink("Clear Filter", "Index", null, new { @class = "btn btn-outline-danger btn-sm" })
        </div>
    </div>

    <!-- Products Display Area -->
    <div class="col-md-9 col-lg-10">
        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-md-4 mb-4">
                    <div class="card" style="height: 100%">
                        <img class="card-img-top" src="~/Content/ProductImages/@item.Image" alt="@item.Name" style="height: 250px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">
                                @Html.ActionLink(item.Name,"Details", new { id = item.Id })
                            </h5>
                            <p class="card-text">@item.Description</p>
                            <h4>@item.Price</h4>
                            <a href="@Url.Action("AddToBasket","Basket",new { Id=item.Id})" class="btn btn-primary">Add To Basket</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


