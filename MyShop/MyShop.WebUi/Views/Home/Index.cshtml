@model IEnumerable<MyShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

<!-- Product Grid -->
<div class="row">
    @foreach (var item in Model)
    {
        <!-- Product Card -->
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="product-card" style="border: 1px solid #ddd; border-radius: 8px; overflow: hidden; padding: 15px; margin-bottom: 30px;">

                <!-- Product Image -->
                <div class="product-image" style="text-align: center; margin-bottom: 15px;">
                    <img class="img-fluid" style="height: 250px; object-fit: cover;" src="~/Content/ProductImages/@item.Image" alt="@item.Name" />
                </div>

                <!-- Product Name & Link -->
                <div class="product-name" style="text-align: center; font-size: 18px; font-weight: bold; margin-bottom: 10px;">
                    @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                </div>

                <!-- Product Description -->
                <div class="product-description" style="text-align: center; font-size: 14px; color: #666; margin-bottom: 10px;">
                    <p>@item.Description</p>
                </div>

                <!-- Product Price -->
                <div class="product-price" style="text-align: center; font-size: 18px; color: #333; margin-bottom: 15px;">
                    <h4>@item.Price</h4>
                </div>

                <!-- Add to Basket Button -->
                <div class="add-to-basket" style="text-align: center;">
                    <a href="#" class="btn btn-primary">Add To Basket</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Optional: Adjust layout for smaller devices -->
<style>
    .product-card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-10px);
        }
</style>
