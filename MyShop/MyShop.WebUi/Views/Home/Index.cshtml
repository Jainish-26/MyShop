<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>

    <style>
        body {
            background-color: #f4f4f9;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 30px;
            font-size: 2.5rem;
            font-weight: bold;
            color: #333;
        }

        .container {
            padding: 0 20px;
        }

        .row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        /* Sidebar styles */
        .sidebar {
            flex: 1;
            max-width: 250px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-right: 20px;
        }

            .sidebar h4 {
                font-size: 1.5rem;
                margin-bottom: 20px;
            }

        .list-group-item {
            padding: 10px;
            cursor: pointer;
        }

            .list-group-item:hover {
                background-color: #f8f9fa;
            }

            .list-group-item.active {
                background-color: #007bff;
                color: white;
            }

        /* Product Grid */
        .product-grid {
            flex: 3;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        .product-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .product-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

            .product-card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
            }

        .product-card-body {
            padding: 15px;
        }

            .product-card-body h5 {
                font-size: 1.25rem;
                margin-bottom: 10px;
            }

            .product-card-body p {
                font-size: 0.95rem;
                color: #666;
                margin-bottom: 15px;
            }

        .product-price {
            font-size: 1.2rem;
            font-weight: bold;
            color: #007bff;
        }

        .btn-add-to-basket {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            text-align: center;
            font-weight: bold;
            text-decoration: none;
        }

            .btn-add-to-basket:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Products</h1>

        <div class="row">
            <!-- Sidebar Filter -->
            <div class="sidebar">
                <h4>Filter By Category</h4>
                <ul class="list-group">
                    <!-- All Products Link -->
                    <li class="list-group-item @((Request.QueryString["Category"] == null) ? "active" : "")">
                        <a href="@Url.Action("Index", "Products")" class="text-decoration-none">All</a>
                    </li>

                    <!-- Category Filters -->
                    @foreach (var cat in Model.ProductCategories)
                    {
                        <li class="list-group-item @(Request.QueryString["Category"] == cat.Category ? "active" : "")">
                            <a href="@Url.Action("Index", "", new { Category = cat.Category })" class="text-decoration-none">@cat.Category</a>
                        </li>
                    }
                </ul>
                <div class="text-center mt-3">
                    <a href="@Url.Action("Index", "")" class="btn btn-outline-danger btn-sm">Clear Filter</a>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="product-grid">
                @foreach (var item in Model.Products)
                {
                    <div class="product-card">
                        <img src="~/Content/ProductImages/@item.Image" alt="@item.Name" />
                        <div class="product-card-body">
                            <h5><a href="@Url.Action("Details", "Products", new { id = item.Id })" class="text-decoration-none">@item.Name</a></h5>
                            <p>@item.Description</p>
                            <div class="product-price">@item.Price.ToString("C")</div>
                            <a href="@Url.Action("AddToBasket", "Basket", new { Id = item.Id })" class="btn-add-to-basket">Add To Basket</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>


