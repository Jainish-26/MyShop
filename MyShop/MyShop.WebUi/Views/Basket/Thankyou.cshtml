@{
    ViewBag.Title = "Thank You";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f7fb;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .thank-you-container {
            max-width: 800px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h2 {
            font-size: 36px;
            color: #4CAF50;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .order-info {
            font-size: 20px;
            color: #555;
            margin-bottom: 30px;
        }

        .order-id {
            font-size: 24px;
            color: #007bff;
            font-weight: bold;
        }

        .thank-you-message {
            background-color: #f1f8e9;
            padding: 20px;
            border-left: 5px solid #4CAF50;
            margin-bottom: 30px;
            font-size: 18px;
            color: #555;
        }

        .cta-button {
            display: inline-block;
            padding: 12px 24px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            font-size: 18px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .cta-button:hover {
                background-color: #45a049;
            }

        footer {
            margin-top: 50px;
            font-size: 14px;
            color: #888;
        }

            footer a {
                color: #007bff;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="thank-you-container">
        <h2>Thank You For Your Order!</h2>

        <div class="thank-you-message">
            <p>Your order has been successfully placed, and we're processing it. We’ll notify you once it's on the way.</p>
        </div>

        <div class="order-info">
            <p>Your Order ID: <span class="order-id">@ViewBag.OrderId</span></p>
        </div>

        <a href="/" class="cta-button">Return to Homepage</a>

        <footer>
            <p>If you have any questions, feel free to <a href="/contact-us">contact us</a>.</p>
        </footer>
    </div>
</body>
</html>
